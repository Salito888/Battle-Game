          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/api/jugadores",
              "host": [
                "{{base_url}}"
              ],
              "path": [
                "api",
                "jugadores"
              ]
            },
            "description": "Obtiene el listado de todos los jugadores registrados"
          },
          "response": []
        }
      ]
    },
    {
      "name": "Partidas",
      "item": [
        
          {"name": "Crear Partida (2 Jugadores)",
          "request": {
          "method": "POST",
          "header": [
      {
        "key": "Content-Type",
        "value": "application/json"
      }
    ],
    "body": {
      "mode": "raw",
      "raw": "{\n  \"player_1_id\": \"{{player_1_id}}\",\n  \"player_2_id\": \"{{player_2_id}}\"\n}"
    },
    "url": {
      "raw": "{{base_url}}/api/partidas",
      "host": [
        "{{base_url}}"
      ],
      "path": [
        "api",
        "partidas"
      ]
    }
  },
  "event": [
    {
      "listen": "test",
      "script": {
        "exec": [
          "let jsonData = pm.response.json();",
          "if (jsonData.game_id) {",
          "    pm.collectionVariables.set(\"game_id\", jsonData.game_id);",
          "    console.log(\"Game ID guardado: \" + jsonData.game_id);",
          "} else {",
          "    console.warn(\"No se encontró game_id en la respuesta\");",
          "}"
        ],
        "type": "text/javascript"
      }
    }
  ]
